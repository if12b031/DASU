<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.*?>

<GridPane hgap="5.0" minHeight="-1.0" minWidth="-1.0" vgap="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="application.MainController">
  <children>
    <Text fill="#ffb199" strokeType="OUTSIDE" strokeWidth="0.0" text="Asynchronous Crypto" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <font>
        <Font name="System Bold" size="55.0" />
      </font>
    </Text>
    <Button id="buttonPath" fx:id="buttonFileDecrypt" mnemonicParsing="false" text="... Browse Txt File" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button id="buttonPublicPath" fx:id="buttonGenPair" mnemonicParsing="false" text="... Browse Directory" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="labelPath" text="Txt-file to decrypt :" textFill="BLACK" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label id="labelPublicPath" text="Path to save Keys :" textFill="BLACK" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="198.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <children>
        <Button id="buttonFilePath" fx:id="buttonFileEncrypt" mnemonicParsing="false" text="... Browse Txt-File" />
        <Button id="buttonFilePath" fx:id="buttonPKEncrypt" mnemonicParsing="false" text="... Browse Public-Key" />
      </children>
    </VBox>
    <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="198.0" spacing="10.0" GridPane.columnIndex="1" GridPane.margin="$x1" GridPane.rowIndex="4">
      <children>
        <Button id="buttonFilePath" fx:id="buttonLoadPrivate" mnemonicParsing="false" text="... Browse Private-Key" />
        <Button id="buttonFilePath" fx:id="buttonLoadPublic" mnemonicParsing="false" text="... Browse Public-Key" />
      </children>
      <padding>
        <Insets fx:id="x1" />
      </padding>
    </VBox>
    <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="198.0" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <children>
        <Label fx:id="labelFilePath" text="Txt-File to encrypt :" textFill="BLACK" />
        <Label id="labelFilePath" text="public-key for encrypt :" textFill="BLACK" />
      </children>
    </VBox>
    <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="198.0" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <children>
        <Label id="labelFilePath" text="Private-Key to load :" textFill="BLACK" />
        <Label id="labelFilePath" text="public-key to load :" textFill="BLACK" />
      </children>
    </VBox>
    <Button fx:id="decrypt" mnemonicParsing="false" onAction="#decrypt" text="decrypt" GridPane.columnIndex="2" GridPane.rowIndex="1">
      <font>
        <Font name="System Bold" size="15.0" fx:id="x2" />
      </font>
    </Button>
    <Button fx:id="encrypt" font="$x2" mnemonicParsing="false" onAction="#encrypt" text="encrypt" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button fx:id="loadKeyPair" font="$x2" mnemonicParsing="false" onAction="#loadKeyPair" text="load Key-Pair" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button fx:id="generateKeyPair" font="$x2" mnemonicParsing="false" onAction="#genKeyPair" text="generate Key-Pair" GridPane.columnIndex="2" GridPane.rowIndex="3" />
  </children>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="198.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="198.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="198.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
  <stylesheets>
    <URL value="@application.css" />
  </stylesheets>
</GridPane>
